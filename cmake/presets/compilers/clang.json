{
    "version": 6,
    "configurePresets": [
        {
            "name": "clang",
            "hidden": true,
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            },
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_DEBUG": "-DDEBUG_MODE=1 -Wall -Wextra -Wpedantic -Wshadow -Wold-style-cast -Woverloaded-virtual -Wnon-virtual-dtor",
                "CMAKE_CXX_FLAGS_RELEASE": "-Werror -Wall -Wextra -Wpedantic -Wshadow -Wold-style-cast -Woverloaded-virtual -Wnon-virtual-dtor"
            }
        }
    ]
}