{
    "version": 6,
    "configurePresets": [
        {
            "name": "clang",
            "hidden": true,
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            },
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_DEBUG": "-g -Wall -Wextra -Wpedantic -Wshadow -Wold-style-cast -Woverloaded-virtual -Wnon-virtual-dtor",
                "CMAKE_CXX_FLAGS_RELEASE": "-O2 -Werror -Wall -Wextra -Wpedantic -Wshadow -Wold-style-cast -Woverloaded-virtual -Wnon-virtual-dtor"
            }
        }
    ]
}