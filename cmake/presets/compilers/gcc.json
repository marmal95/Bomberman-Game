{
    "version": 6,
    "configurePresets": [
        {
            "name": "gcc",
            "hidden": true,
            "environment": {
                "CC": "gcc",
                "CXX": "g++"
            },
            "cacheVariables": {
               "CMAKE_CXX_FLAGS_DEBUG": "-g -Wall -Wextra -Wpedantic -Wshadow=local -Wold-style-cast -Woverloaded-virtual -Wnon-virtual-dtor",
                "CMAKE_CXX_FLAGS_RELEASE": "-O2 -Werror -Wall -Wextra -Wpedantic -Wshadow=local -Wold-style-cast -Woverloaded-virtual -Wnon-virtual-dtor"
            }
        }
    ]
}